<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
 "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

    <validator type="requiredstring">
        <param name="fieldname">client.NIF</param>
        <message key="error.NIF"></message>
    </validator>
    
     <validator type="regex">
    <param name="fieldname">client.NIF</param>
    <param name="regex"><![CDATA[(([X-Z]{1})([-]?)(\d{7})([-]?)([A-Z]{1}))|((\d{8})([-]?)([A-Z]{1}))]]></param>
    <message key="error.formatDate"></message>
</validator>

	<validator type="requiredstring">
	<param name="fieldname">client.nom</param>
	<message key="error.nom"></message>
	</validator >
 <validator type="int">  
              <param name="fieldName">client.edat</param>  
              <param name="min">0</param>  
              <param name="max">120</param>  
              <message key="error.edat"></message>  
          </validator>  

<validator type="email">
    <param name="fieldname">client.email</param>
    <message key="error.email"></message>
</validator>
<validator type="requiredstring">
	<param name="fieldname">client.cognoms</param>
	<message key="error.cognoms"></message>
	</validator >
	
	
	<validator type="requiredstring">
	<param name="fieldname">client.password</param>
	<message key="error.cognoms"></message>
	</validator>
	
	 <validator type="int">  
              <param name="fieldName">client.telefon</param>  
             <param name="minLength">9</param>
             <param name="maxLength">9</param>
              
              <message key="error.telefon"></message>  
          </validator>  
          <validator type="requiredstring">
	<param name="fieldname">client.localitat</param>
	<message key="error.localitat"></message>
	</validator>
	<validator type="email">
    <param name="fieldname">email</param>
    <message key="error.email"></message>
</validator>
	<validator type="requiredstring">
	<param name="fieldname">password</param>
	<message key="error.cognoms"></message>
	</validator>
</validators>